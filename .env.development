# Development Environment Configuration
# This is a working example for development/testing

# ==================== Database Settings ====================
DATABASE_URL=sqlite:///./data/training_data.db
DATABASE_POOL_SIZE=5
DATABASE_POOL_TIMEOUT=30

# ==================== Garmin Settings (SENSITIVE) ====================
# Replace with your actual Garmin credentials
GARMIN_EMAIL=dev-user@example.com
GARMIN_PASSWORD=development-password-changeme
GARMIN_SYNC_ENABLED=true

# ==================== Claude AI Settings (SENSITIVE) ====================
# Replace with your actual API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-development-key-changeme
AI_MODEL=claude-sonnet-4-5-20250929
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7
AI_TIMEOUT=60

# ==================== Application Settings ====================
APP_NAME=AI Training Optimizer (Dev)
APP_HOST=127.0.0.1
APP_PORT=8000
# For dev, you can generate: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=dev-secret-key-for-testing-only-change-me
DEBUG=true
ENVIRONMENT=development

# ==================== Scheduling Settings ====================
SYNC_TIME=06:00
SYNC_TIMEZONE=UTC
SYNC_RETRY_ATTEMPTS=3

# ==================== Notification Settings ====================
NOTIFICATIONS_ENABLED=false
NOTIFICATION_EMAIL=
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# ==================== User Profile Settings ====================
ATHLETE_NAME=Test Athlete
ATHLETE_AGE=35
ATHLETE_GENDER=male
ATHLETE_WEIGHT=75.0
ATHLETE_HEIGHT=180.0

# Heart Rate Settings
MAX_HEART_RATE=185
RESTING_HEART_RATE=55
LACTATE_THRESHOLD_HR=165
VO2_MAX=52.0

# ==================== Training Settings ====================
TRAINING_GOAL=Improve 10K time to under 40 minutes
TARGET_RACE_DATE=2025-12-31
WEEKLY_TRAINING_DAYS=6
WEEKLY_TRAINING_HOURS=10.0
INJURY_HISTORY=

# Training Preferences
PREFERRED_TRAINING_TYPES=running,cycling,swimming
AVOID_MORNING_RUNS=false

# ==================== Logging Settings ====================
LOG_LEVEL=DEBUG
LOG_FILE=logs/training_optimizer.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ==================== Feature Flags ====================
ENABLE_AI_ANALYSIS=true
ENABLE_FATIGUE_MONITORING=true
ENABLE_WORKOUT_RECOMMENDATIONS=true
