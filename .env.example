# AI-Powered Training Optimization System Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ==================== Database Settings ====================
DATABASE_URL=sqlite:///./data/training_data.db
DATABASE_POOL_SIZE=5
DATABASE_POOL_TIMEOUT=30

# ==================== Garmin Settings (SENSITIVE) ====================
GARMIN_EMAIL=your-email@example.com
GARMIN_PASSWORD=your-garmin-password
GARMIN_SYNC_ENABLED=true

# ==================== Claude AI Settings (SENSITIVE) ====================
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AI_MODEL=claude-sonnet-4-5-20250929
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7
AI_TIMEOUT=60

# ==================== Application Settings ====================
APP_NAME=AI Training Optimizer
APP_HOST=0.0.0.0
APP_PORT=8000
# Generate secure key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_ME_IN_PRODUCTION
DEBUG=false
ENVIRONMENT=development

# ==================== Scheduling Settings ====================
SYNC_TIME=06:00
SYNC_TIMEZONE=UTC
SYNC_RETRY_ATTEMPTS=3

# ==================== Notification Settings ====================
NOTIFICATIONS_ENABLED=false
NOTIFICATION_EMAIL=your-email@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_USE_TLS=true

# ==================== User Profile Settings ====================
ATHLETE_NAME=Your Name
ATHLETE_AGE=35
ATHLETE_GENDER=male
ATHLETE_WEIGHT=75.0
ATHLETE_HEIGHT=180.0

# Heart Rate Settings
MAX_HEART_RATE=185
RESTING_HEART_RATE=55
LACTATE_THRESHOLD_HR=165
VO2_MAX=52.0

# ==================== Training Settings ====================
TRAINING_GOAL=Complete marathon in under 3:30:00
TARGET_RACE_DATE=2025-10-15
WEEKLY_TRAINING_DAYS=6
WEEKLY_TRAINING_HOURS=12.0
INJURY_HISTORY=

# Training Preferences
PREFERRED_TRAINING_TYPES=running,cycling
AVOID_MORNING_RUNS=false

# ==================== Logging Settings ====================
LOG_LEVEL=INFO
LOG_FILE=logs/training_optimizer.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ==================== Feature Flags ====================
ENABLE_AI_ANALYSIS=true
ENABLE_FATIGUE_MONITORING=true
ENABLE_WORKOUT_RECOMMENDATIONS=true
